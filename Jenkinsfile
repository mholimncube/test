    agent any
    
    stages {
      
      stage("build") {
        
        steps {
          echo "building the application..."
          echo "building the application stack ..."
        }
      }
      
      stage("test") {
        
        steps {
          echo "testing the application..."
        }
      }
      
      stage("deploying") {
        
        steps {
          echo "deploying the application..."
        }
      }
      
    }
}
